<div class="container my-5">
  <h1 class="d-flex justify-content-center mb-5">URL Shortener</h1>
  <input type="url" class="form-control mb-3" name="url" id="url" placeholder="Input URL here" aria-describedby=""
    value="{{url}}" disabled readonly>
  <p class="mb-3">Success! Please use this link:</p>
  <a href="/{{id}}" class="mb-3" id="short-url">{{id}}</a>
  <button type="button" class="btn btn-primary" id="copy-url">Copy</button>
</div>

<script src="./javascripts/success.js"></script>