<div class="container my-5">
  <h1 class="d-flex justify-content-center mb-5">URL Shortener</h1>
  <form action="/" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
      <input type="url" class="form-control mb-3" name="url" id="url" placeholder="Input URL here" aria-describedby=""
        required>
      <div class="invalid-feedback">Please input a URL.</div>
    </div>
    <button type="submit" class="btn btn-primary">Shorten</button>
  </form>
</div>

<script src="./javascripts/index.js"></script>